<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/lura"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Musica"
        android:id="@+id/Musica"
        android:layout_marginStart="43dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Artista"
        android:id="@+id/Artista"
        android:layout_below="@+id/Musica"
        android:layout_alignStart="@+id/Musica" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Album"
        android:id="@+id/Album"
        android:layout_below="@+id/Artista"
        android:layout_alignStart="@+id/Artista" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ano"
        android:id="@+id/Ano"
        android:layout_below="@+id/Album"
        android:layout_alignStart="@+id/Album" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compositor"
        android:id="@+id/Compositor"
        android:layout_below="@+id/Ano"
        android:layout_alignStart="@+id/Ano" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genero"
        android:id="@+id/Genero"
        android:layout_below="@+id/Compositor"
        android:layout_alignStart="@+id/Compositor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duração"
        android:id="@+id/Tempo"
        android:layout_below="@+id/Genero"
        android:layout_alignStart="@+id/Genero" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/play"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="41dp" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_below="@+id/Tempo"
        android:layout_alignStart="@+id/Tempo"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Progress SeekBar"
        android:id="@+id/seekBarTv"
        android:layout_below="@+id/seekBar"
        android:layout_alignStart="@+id/seekBar"
        android:layout_marginTop="24dp" />

</RelativeLayout>